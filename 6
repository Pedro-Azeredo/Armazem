--ex 1
select nomecliente, genero from cliente

--ex 2
select nomeproduto, preco from produto

--ex 3
select idcompra, dtcompra from compras

--ex 4
select nomecliente,cidade ,estadocivil from cliente

--ex 5
select * from cliente

--ex 6
select nomecliente, estado civil 
from cliente
order by nomecliente desc
	
--ex 7
select nomeproduto, preco
from produto
order by preco desc

--ex 8 
select nomecliente, estado, cidade
from cliente
order by estado, cidade

--ex 9 
select distinct estado
from cliente

--ex 10
select distinct dtcompra
from compras

--ex 11
select nomeproduto,preco
from produto
where preco > 5

--ex 12
select nomecliente, estadocivil
from cliente
where genero = 'M'

--ex 13
select nomecliente, cidade
from cliente
where estado = 'Rio de Janeiro'

--ex 14
select nomecliente, dtnascimento
from cliente
where dtnascimento < '24/06/2004' 
order by dtnascimento

--ex 15
select distinct idcliente, dtcompra
from compras
where dtcompra between '01-01-2021' and '30-12-2021'
order by dtcompra

--ex 16
select distinct idcliente, dtcompra
from compras
where extract(year from dtcompra) = 2020

--ex 17
select nomecliente
from cliente
where nomecliente like 'A%'
order by nomecliente asc

--ex 18
select nomecliente
from cliente
where nomecliente like '%ana%'

--ex 19
select nomecliente, estadocivil
from cliente
where estado in ('Rio de Janeiro', 'SÃ£o Paulo', 'Minas Gerais')

--ex 20
select nomecliente, estadocivil,
	case 
		when estadocivil = 'D' then 'Divorciada(o)'
		when estadocivil = 'V' then 'Viuva(o)'
		when estadocivil = 'C' then 'Casada(o)'
		when estadocivil = 'S' then 'Solteira(o)'
		else 'genero fluido'
	end
from cliente

--ex 21
select p.nomeproduto, m.nomemarca
from produto as p, marca as m
where p.idmarca = m.idmarca

--ex 22
select c.nomecliente, p.nomeproduto
from cliente as c, produto as p, compras as com
where c.idcliente = com.idcliente 
and p.idproduto = com.idproduto

--ex 23 
select c.nomecliente, c.estado, l.nomeloja, l.uf, com.qtd
from cliente as c, loja as l, compras as com
where c.idcliente = com.idcliente
and l.idloja = com.idloja
and com.qtd > '40'

--ex 24
select p.nomeproduto, p.preco, m.nomemarca
from produto as p join marca as m
on m.idmarca = p.idmarca

--ex 25
select m.nomemarca, com.dtcompra, com.qtd
from marca as m join compras as com join produto as p
on p.idproduto = com.idproduto
on m.idmarca = p.idmarca

--ex 26 
select c.nomecliente, p.nomeproduto, com.qtd
from cliente as c, produto as p, compras as com
where p.idproduto = com.idproduto
and c.idcliente = com.idcliente

--ex 27
select c.nomecliente, com.idcompra
from cliente as c left join compras as com
on c.idcliente = com.idcliente 



	
select * from loja
select * from cliente
select * from compras
select * from marca
select * from produto
